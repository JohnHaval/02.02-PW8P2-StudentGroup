<Window x:Class="PW8P2_StudentGroup.SubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW8P2_StudentGroup"
        mc:Ignorable="d"
        Title="Добавить предмет" MinWidth="180" FontSize="14" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel>
        <Label Content="Имя предмета"/>
        <TextBox x:Name="Name" Margin="3" MaxLength="50"/>
        <Label Content="Год"/>
        <TextBox x:Name="Year" Margin="3" MaxLength="4"/>
        <Label Content="Оценка"/>
        <TextBox x:Name="Mark" Margin="3" MaxLength="1"/>
        <Button x:Name="Confirm" Content="Добавить" Margin="3" Click="Confirm_Click"/>
        <Button x:Name="Cancel" Content="Отмена" Margin="3" Click="Cancel_Click"/>
    </StackPanel>
</Window>
