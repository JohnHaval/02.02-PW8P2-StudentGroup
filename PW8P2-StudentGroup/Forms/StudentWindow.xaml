<Window x:Class="PW8P2_StudentGroup.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW8P2_StudentGroup"
        mc:Ignorable="d"
        Title="Добавить студента" MinWidth="180" FontSize="14" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel>
        <Label Content="Фамилия"/>
        <TextBox x:Name="SecondName" MaxLength="50" Margin="3"/>
        <Label Content="Дата рождения"/>
        <DatePicker x:Name="BornDate" Margin="3"/>
        <Label Content="Год поступления"/>
        <TextBox x:Name="EnterYear" MaxLength="4" Margin="3"/>
        <Label Content="Курс"/>
        <TextBox x:Name="Course" MaxLength="1" Margin="3"/>
        <Label Content="Группа"/>
        <TextBox x:Name="Group" MaxLength="10" Margin="3"/>
        <Button x:Name="Confirm" Content="Добавить" IsDefault="True" Margin="3" Click="Confirm_Click"/>
        <Button x:Name="Cancel" Content="Отмена" IsCancel="True" Margin="3" Click="Cancel_Click"/>
    </StackPanel>
</Window>
